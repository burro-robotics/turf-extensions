{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "extends": "./node_modules/gts/tsconfig-google.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "test/**/*"
  ]
}